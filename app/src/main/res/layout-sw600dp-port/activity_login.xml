<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_marginTop="250dp"
    android:background="@color/login_background_color"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="399dp"
        android:layout_height="319dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_android_mood_happy_successful" />

    <LinearLayout
        android:id="@+id/secondSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="516dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_email_gray_24dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/view_text_color"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/password"

            android:layout_width="518dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_vpn_key_gray_24dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColorHint="@color/view_text_color"
            android:textSize="35sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="516dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_login_btn"

            android:text="@string/login"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:layout_marginEnd="111dp"
                android:text="@string/signup_string"
                android:textColor="@color/view_text_color"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView_forgotPassword"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="117dp"
                android:text="@string/forgot_string"
                android:textColor="@color/view_text_color"
                android:textSize="27sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
