<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mood_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/mood_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
             />

        <TextView
            android:id="@+id/mood_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="30dp"
            android:text="@string/name"
            android:textSize="20sp" />

        <View
            android:id="@+id/hover"
            android:layout_width="230dp"
            android:layout_height="3dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/mood_img"
            android:background="@color/darker_gray" />

        <TextView
            android:id="@+id/mood_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mood_img"
            android:layout_alignStart="@+id/mood_name"
            android:text="@string/index" />

    </RelativeLayout>

</android.support.v7.widget.CardView>