<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/mood_detail_background"
    android:orientation="vertical"
    tools:context=".MoodDetails">

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/ic_android_mood_happy" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text1"
            android:textColor="@color/his_name_and_he_text"
            android:fontFamily="@font/custom_font"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/name_hint"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/blue"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text2"
            android:textColor="@color/his_name_and_he_text"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/custom_font"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/mood_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/mood_hint"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/blue"
            android:textSize="35sp" />
    </LinearLayout>
</LinearLayout>